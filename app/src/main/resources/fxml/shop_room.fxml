<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unibo.abyssclimber.ui.room.ShopRoomController"
            prefWidth="1280" prefHeight="720">
    <children>
        
        <ImageView fx:id="backgroundView" fitHeight="720.0" fitWidth="1280.0" 
                   AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" 
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                   preserveRatio="false" />
        
        <Label fx:id="titleLabel" text="Shop" layoutX="580" layoutY="50" 
               style="-fx-font-size: 30px; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, black, 5, 0.5, 0, 0);"/>

        <Label fx:id="descLabel" text="Back" layoutX="550" layoutY="100" 
               style="-fx-font-size: 16px; -fx-text-fill: lightgray; -fx-effect: dropshadow(gaussian, black, 5, 0.5, 0, 0);"/>

        <Button text="View Items for sale" 
                onAction="#onEnterShop"
                layoutX="500" layoutY="350"
                style="-fx-background-color: rgba(0, 0, 0, 0.6); -fx-text-fill: white; -fx-background-radius: 20; -fx-border-color: white; -fx-border-radius: 20; -fx-cursor: hand; -fx-font-weight: bold; -fx-padding: 10 30;"/>
        
        <Button text="Go back" 
                onAction="#onBackToMap"
                layoutX="950" layoutY="350"
                style="-fx-background-color: rgba(0, 0, 0, 0.6); -fx-text-fill: white; -fx-background-radius: 20; -fx-border-color: white; -fx-border-radius: 20; -fx-cursor: hand; -fx-font-weight: bold;"/>

    </children>
</AnchorPane>